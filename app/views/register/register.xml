<Page loaded="loaded"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:titlecomponent="components/title">
    <titlecomponent:title title="{{ L('register_title') }}"/>
    <StackLayout>
        <Image src="res://logo" stretch="none" horizontalAlignment="center"/>

        <TextField text="{{ email }}" id="email" hint="{{ L('email_hint') }}" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
        <TextField text="{{ password }}" secure="true" hint="{{ L('password_hint') }}" />

        <Button text="{{ L('sign_up') }}" tap="register" />
    </StackLayout>
</Page>
